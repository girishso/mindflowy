!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title MindFlowy - Your Digital Brain
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    - if user_signed_in?
      %meta{:content => current_or_guest_user.authentication_token, :name => "auth_token"}/
    = analytics_init if Rails.env.production?
    / Le styles
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
    / HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="../assets/js/html5shiv.js"></script>
    / Fav and touch icons
    %link{:href => "../assets/ico/apple-touch-icon-144-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "144x144"}/
    %link{:href => "../assets/ico/apple-touch-icon-114-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}/
    %link{:href => "../assets/ico/apple-touch-icon-72-precomposed.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}/
    %link{:href => "../assets/ico/apple-touch-icon-57-precomposed.png", :rel => "apple-touch-icon-precomposed"}/
    %link{:href => "../assets/ico/favicon.png", :rel => "shortcut icon"}/
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar A
            %span.icon-bar B
            %span.icon-bar C
          %a.brand{:href => "/"} MindFlowy
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "#"} Home
              %li
                %a{:href => "#about"} About
              %li
                %a{"data-toggle" => "modal", :href => "#kbd"} Keyboard Shortcuts
            %ul.nav.navbar-nav.navbar-right.pull-right
              %li.dropdown
                - if user_signed_in?
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Welcome, #{current_or_guest_user.name}
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Edit Account", edit_user_registration_path
                    %li.divider
                    %li= link_to "Sign Out", destroy_user_session_path, method: :delete
                - else
                  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    Account
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      %a{"data-toggle" => "modal", :href => "#login"} Sign in...
                    %li= link_to "Sign in with Facebook", "/accounts/auth/facebook"
                    %li
                      %a{"data-toggle" => "modal", :href => "#signup"} Sign up...
          / /.nav-collapse
    .container

      = render partial: "elements/modals"
      .row-fluid
        .span4
          - if user_signed_in?
            #kbd
              .form-signin
                %h3
                  %i.fa.fa-keyboard-o.fa-lg
                %table.table.table-striped
                  %tbody
                    %tr
                      %td
                        %kbd Click
                      %td
                        an item and start typing
                    %tr
                      %td
                        %kbd Enter
                      %td
                        add a new item
                    %tr
                      %td
                        %kbd Tab
                      %td
                        indent
                    %tr
                      %td
                        %kbd Shift+Tab
                      %td
                        un-indent
                    %tr
                      %td
                        %kbd Up Arrow
                      %td
                        select item above
                    %tr
                      %td
                        %kbd Down Arrow
                      %td
                        select item bellow
        .span8
          = bootstrap_flash
          = yield
      %footer.navbar.navbar-inverse.navbar-fixed-bottom
        .container
          By:
          %a{:href => "http://www.cuberoot.in"} Cube Root Software
          \&copy; 2014
    / /container

    = javascript_include_tag "application", "data-turbolinks-track" => true
